<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".view.dashboard.tabs.adminArea.addProduct.AddProductFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_card"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/img_add_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_placeholder"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/et_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    app:layout_constraintTop_toBottomOf="@id/image_card"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/ripple_stroke_main_5"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/regular"
                    android:hint="Enter product name"
                    android:inputType="text"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/et_product_category"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    app:layout_constraintTop_toBottomOf="@id/et_product_name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/ripple_stroke_main_5"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/regular"
                    android:hint="Enter product category"
                    android:inputType="text"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/et_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    app:layout_constraintTop_toBottomOf="@id/et_product_category"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/ripple_stroke_main_5"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/regular"
                    android:hint="Enter product price"
                    android:inputType="number"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/et_product_description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:minHeight="@dimen/_100sdp"
                    app:layout_constraintTop_toBottomOf="@id/et_product_price"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/ripple_stroke_main_5"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/regular"
                    android:gravity="top"
                    android:hint="Enter product description"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/_10sdp"
                    android:importantForAutofill="no" />

                <TextView
                    android:id="@+id/btn_add_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    app:layout_constraintTop_toBottomOf="@id/et_product_description"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/ripple_bg_main_5"
                    android:gravity="center"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/_12ssp"
                    android:text="Add Product"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>